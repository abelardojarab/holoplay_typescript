{
"compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "outDir":"build",
    "removeComments": true,
    "inlineSources": true,
    "lib": ["es2016", "dom"]
  },
  "exclude": [
    "node_modules",
    "libs",
    "assets",
    "lang",
    "php",
    "build",
    ".vscode"
  ],
  "filesGlob":[
    "./**/*.ts"
  ]
}
